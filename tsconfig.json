{
  "ts-node": {
    "files": true,
    "typeCheck": true,
    "require": ["dotenv/config"]
  },
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "strict": false,
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./",
    "paths": {
      "_/*": ["./*"]
    }
  }
}
