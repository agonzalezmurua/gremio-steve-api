{
  "ts-node": {
    "files": true,
    "compilerOptions": { "emitDecoratorMetadata": true }
  },
  "exclude": ["node_modules/**"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
